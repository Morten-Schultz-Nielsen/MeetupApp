@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
    using(Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "post-simple nav-list nav-item line-form", role = "form", enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        @Html.ActionLink("Your Profile", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Click to go to your profile" })
        <input type="submit" value="Log off" id="nav-simple-form-send" />
    }
}
else
{
    <div class="nav-login nav-list nav-item">
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </div>
}
